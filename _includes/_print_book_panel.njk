<section id="book-panel">
	{% if story.introduction %}
		<div class="main hide-laptop">
			{{ story.introduction | prettifyMaltese | safe }}
			<a href="https://revolut.me/aphroconfuso" class="order-button" onclick="analytics(['trackEvent', 'Ordni', '{{ story.title }}']);">â‚¬20<img class="revolut-logo" src="/img/revolut.png" alt="Revolut"/></a>
		</div>
	{% endif %}
	{% if story.podcastNote and not story.podcastUrl %}
		<div class="main hide-mobile">{{ story.podcastNote | prettifyMaltese | safe }}</div>
