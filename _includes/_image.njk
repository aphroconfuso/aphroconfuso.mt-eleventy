<figure class="editorial-image">
	{% set imageCrop = story.imageCrop or 'landscape' %}
	<picture>
		{% if imageMode === 'lightbox' %}
			<source media="(min-height: 900px)" type="image/avif" srcset="{{ metadata.settings.imagesUrl }}{{ slide['large_' + imageCrop + '_avif_x3'].hash }}{{ slide['large_' + imageCrop + '_avif_x3'].ext }}">
			<source media="(min-height: 600px)" type="image/avif" srcset="{{ metadata.settings.imagesUrl }}{{ slide['large_' + imageCrop + '_avif_x2'].hash }}{{ slide['large_' + imageCrop + '_avif_x2'].ext }}">
			<source media="(min-height: 1px)" type="image/avif" srcset="{{ metadata.settings.imagesUrl }}{{ slide['large_' + imageCrop + '_avif'].hash }}{{ slide['large_' + imageCrop + '_avif'].ext }}">
			<source media="(min-height: 900px)" type="image/jpeg" srcset="{{ metadata.settings.imagesUrl }}{{ slide['large_' + imageCrop + '_jpeg_x3'].hash }}{{ slide['large_' + imageCrop + '_jpeg_x3'].ext }}">
			<source media="(min-height: 600px)" type="image/jpeg" srcset="{{ metadata.settings.imagesUrl }}{{ slide['large_' + imageCrop + '_jpeg_x2'].hash }}{{ slide['large_' + imageCrop + '_jpeg_x2'].ext }}">
			<source media="(min-height: 1px)" type="image/jpeg" srcset="{{ metadata.settings.imagesUrl }}{{ slide['large_' + imageCrop + '_jpeg'].hash }}{{ slide['large_' + imageCrop + '_jpeg'].ext }}">
		{% else %}
			<source media="(min-width: {{ metadata.settings.breakpoints.mobile }})" type="image/avif" srcset="
				{{ metadata.settings.imagesUrl }}{{ slide['twothirds_' + imageCrop + '_avif'].hash }}{{ slide['twothirds_' + imageCrop + '_avif'].ext }} 1x,
				{{ metadata.settings.imagesUrl }}{{ slide['twothirds_' + imageCrop + '_avif_x2'].hash }}{{ slide['twothirds_' + imageCrop + '_avif_x2'].ext }} 2x,
				{{ metadata.settings.imagesUrl }}{{ slide['twothirds_' + imageCrop + '_avif_x3'].hash }}{{ slide['twothirds_' + imageCrop + '_avif_x3'].ext }} 3x
			">
			<source media="(min-width: {{ metadata.settings.breakpoints.mobile }})" type="image/jpeg" srcset="
				{{ metadata.settings.imagesUrl }}{{ slide['twothirds_' + imageCrop + '_jpeg'].hash }}{{ slide['twothirds_' + imageCrop + '_jpeg'].ext }} 1x,
				{{ metadata.settings.imagesUrl }}{{ slide['twothirds_' + imageCrop + '_jpeg_x2'].hash }}{{ slide['twothirds_' + imageCrop + '_jpeg_x2'].ext }} 2x,
				{{ metadata.settings.imagesUrl }}{{ slide['twothirds_' + imageCrop + '_jpeg_x3'].hash }}{{ slide['twothirds_' + imageCrop + '_jpeg_x3'].ext }} 3x
			">
			<source media="(min-width: 1px)" type="image/avif" srcset="
				{{ metadata.settings.imagesUrl }}{{ slide.square_avif.hash }}{{ slide.square_avif.ext }} 1x,
				{{ metadata.settings.imagesUrl }}{{ slide.square_avif_x2.hash }}{{ slide.square_avif_x2.ext }} 2x,
				{{ metadata.settings.imagesUrl }}{{ slide.square_avif_x3.hash }}{{ slide.square_avif_x3.ext }} 3x
			">
			<source media="(min-width: 1px)" type="image/jpeg" srcset="
				{{ metadata.settings.imagesUrl }}{{ slide.square_jpeg.hash }}{{ slide.square_jpeg.ext }} 1x,
				{{ metadata.settings.imagesUrl }}{{ slide.square_jpeg_x2.hash }}{{ slide.square_jpeg_x2.ext }} 2x,
				{{ metadata.settings.imagesUrl }}{{ slide.square_jpeg_x3.hash }}{{ slide.square_jpeg_x3.ext }} 3x
			">
		{% endif %}
		<img
			src="{{ metadata.settings.imagesUrl }}{{ slide.social.hash }}{{ slide.social.ext }}"
			alt="{{ image.attributes.alternativeText }}"
		>
	</picture>
	<figcaption>{{ image.attributes.caption }}</figcaption>
</figure>
