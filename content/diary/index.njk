---
pagination:
  data: stories
  size: 250
  alias: story
permalink: /djarju/index.html
---
{% extends 'layouts/base.njk' %}

{% block head %}
	<title>Djarju Â· Aphroconfuso</title>
{% endblock %}

{% block content %}
	<article class="generic diaries">
		<header>
			<ul><li class="header-label">&nbsp;</li></ul>
			<h1>Djarju</h1>
		</header>
		<div class="container-generic">
			<section id="grid-body" class="generic-body-text">
				<p>{{ metadata.texts.diary | prettifyMaltese | safe}}</p>
				{% set promoFrom = "Djarju" %}
				{% set promos = stories | selectattr("listableDiary") | sort(true, false, "dateTimePublication") %}
				{% set omitEpisodeNumber = true %}
				{% set showEpisodeTitle = true %}
				{% set showLengths = true %}
				{% include "_promo_list.njk" %}
			</section>
			<section id="grid-max-panel-left-top">
				{% include "_menu_diaries.njk" %}
			</section>
		</div>
	</article>
{% endblock %}
