---
pagination:
  data: internationals
  size: 1
  alias: international
permalink: /{{ international.code }}/index.html
---
{% extends 'layouts/base.njk' %}

{% block head %}
	<title>{{ international.title }} Â· Aphroconfuso</title>
	<meta content="{{ metadata.description }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.imagesUrl }}{{ metadata.settings.socialImage }}">
	{% for page in internationals %}
		<link rel="alternate" hreflang="{{ page.code }}" href="https://aphroconfuso.mt/{{ page.code }}/" />
	{% endfor %}
{% endblock %}

{% block content %}
	<article class="generic" dir="{{ international.direction }}" lang="{{ international.code }}">
		<header>
			<ul><li class="header-label">&nbsp;</li></ul>
			<h1>{{ international.title }}</h1>
			<h2>&nbsp;</h2>
		</header>
		<div class="container">
			<section id="grid-body">
				<div class="generic-body-text separated">{{ international.body | prettifyMaltese | sectioniseOnly | safe }}</div>
			</section>
		</div>
	</article>
{% endblock %}
