{% extends 'layouts/base.njk' %}

{% block head %}
	<title>{{ styleguide.title }} Â· Aphroconfuso</title>
	<meta content="{{ styleguide.body | getDescription }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.imagesUrl }}{{ metadata.settings.socialImage }}">
{% endblock %}

{% block content %}
	<article class="generic">
		<header>
			<ul><li class="header-label">&nbsp;</li></ul>
			<h1>{{ styleguide.title }}</h1>
			<h2>&nbsp;</h2>
		</header>
		<div class="container">
			<section id="grid-body">
				<div class="generic-body-text">{{ styleguide.body | prettifyMaltese | safe }}</div>
				<ol class="definitions-list generic-body-text">
				{% for entry in styleguide.entries %}
					<li>
						<h6 id="{{ entry.attributes.term | slugifyMaltese | safe }}">{{ entry.attributes.term | prettifyMaltese | safe }}</h6>
						{{ entry.attributes.definition | prettifyMaltese | anchorise | safe }}
					</li>
				{% endfor %}
				</ol>
			</section>
			<section id="grid-max-panel-left-top">
				{% include "_menu_generic.njk" %}
			</section>
		</div>
	</article>
{% endblock %}
