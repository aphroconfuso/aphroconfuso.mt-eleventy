{% extends 'layouts/base.njk' %}

{% block head %}
	<title>{{ appointmentIndex.title }} Â· Aphroconfuso</title>
	<meta content="{{ metadata.description }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.socialImage }}">
{% endblock %}

{% block content %}
<article class="generic appointments">
	<header>
		<h5>&nbsp;</h5>
		<h1>{{ appointmentIndex.title }}</h1>
		<h2>&nbsp;</h2>
	</header>
	<div class="container">
		<section id="grid-max-panel-left-top">
		<!-- X -->
		</section>
		<section id="grid-max-panel-right-top">
		<!-- X -->
		</section>
	<section id="grid-body">
			<div class="generic-body-text">{{ appointmentIndex.body | prettifyMaltese | safe }}</div>
			<ul class="promo-list">
				{% for appointment in appointments %}
					<li>
						<a class="promo {{ appointment.monthYear | slugify }}" href="/{{ appointment.monthYear | slugifyMaltese }}">
							<header>
								<h1>{{ appointment.monthYear | safe }}</h1>
							</header>
							<div class="body-text">
								<p>{{ appointment.editorial | prettifyMaltese | safe }}</p>
							</div>
						</a>
					</li>
				{% endfor %}
			</ul>
	</section>
	<section id="grid-max-panel-left-bottom">
		<!-- X -->
	</section>
	<section id="grid-max-panel-right-bottom">
		<!-- X -->
	</section>
</div>
</article>
{% endblock %}
