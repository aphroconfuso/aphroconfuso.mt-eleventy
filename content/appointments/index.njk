---
layout: layouts/home.njk
templateClass: tmpl-post
eleventyNavigation:
  key: Appointments
  order: 3
permalink: /appuntamenti/index.html
---
{% block head %}
	<title>Appuntamenti Â· Aphroconfuso</title>
	<meta content="{{ contributor.metaDescription or metadata.description }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.imagesUrl }}/{{ metadata.settings.promoImage }}">
{% endblock %}

{% block content %}
<article class="generic">
	<header>
		<h5>&nbsp;</h5>
		<h1>Appuntamenti</h1>
		<h2>&nbsp;</h2>
	</header>
	<div class="container">
		<section class="grid-max-panel-left-top">
		<!-- X -->
		</section>
		<section class="grid-max-panel-right-top">
		<!-- X -->
		</section>
	<section>
			<div class="generic-body-text">{{ appointmentIndex.body | prettifyMaltese | safe }}</div>
			<ul class="promo-list">
				{% for appointment in appointments %}
					<li>
						<a class="promo {{ appointment.monthYear | slugify }}" href="/{{ appointment.monthYear | slugifyMaltese }}">
							<header>
								<h1>{{ appointment.monthYear | safe }}</h1>
							</header>
							<div class="body-text">
								<p>{{ appointment.editorial | prettifyMaltese | safe }}</p>
							</div>
						</a>
					</li>
				{% endfor %}
			</ul>
	</section>
	<section class="grid-max-panel-left-bottom">
		<!-- X -->
	</section>
	<section class="grid-max-panel-right-bottom">
		<!-- X -->
	</section>
</div>
</article>
{% endblock %}
