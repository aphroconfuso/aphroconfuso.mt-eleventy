---
pagination:
  data: appointments
  size: 1
  alias: appointment
permalink: /{{ appointment.monthYear | slugifyMaltese }}/index.html
---
{% extends 'layouts/base.njk' %}

{% block head %}
	<title>{{ appointment.monthYear | prettifyMaltese | safe }} Â· Aphroconfuso</title>
	<meta content="{{ appointment.editorial | getDescription }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.socialImage }}">
{% endblock %}

{% block content %}
<article class="generic {{ appointment.monthYear | slugify }}">
	<header>
		<h3><a href="/appuntamenti">Appuntamenti</a></h5>
		<h1>{{ appointment.monthYear | prettifyMaltese | safe }}</h1>
		<h2></h2>
	</header>
	<div class="container">
	<section>
		<div class="generic-body-text editorial">{{ appointment.editorial | prettifyMaltese | endDotify | safe }}</div>
		<ul class="promo-list">
			{% for story in appointment.stories %}
				<li>
					<a class="promo {{ story.monthYear | slugify }}" href="/{{ story.slug }}">
						<header>
							<h3>{{ story.monthYear | fixMonthMaltese }}</h5>
							<h1>{{ story.title }}</h1>
							<h2>
								{% if story.translator %}
									{{ story.author | prettifyMaltese }} <span class="translator">{{ story.translator | prettifyMaltese }}</span>
								{% else %}
									{{ story.author | prettifyMaltese }}
								{% endif %}
							</h2>
						</header>
						<div class="{{ story.cssClass }}">
							{% if story.type === 'Poezija' %}
								{{ story.description | prettifyMaltese | versifyDescription | safe }}
							{% else %}
								<p>{{ story.description | prettifyMaltese | safe }}</p>
							{% endif %}
						</div>
					</a>
				</li>
			{% endfor %}
		</ul>
	</section>
	<section id="grid-max-panel-left-top">
		{# <section class="kittieba-menu">
			{% for item in appointments %}
				{% if loop.first %}<ul>{% endif %}
					<li>
						<a href="/{{ item.slug }}">{{ item.name }}</a>
					</li>
				{% if loop.last %}</ul>{% endif %}
			{% endfor %}
		</section> #}
	</section>
</div>
</article>
{% endblock %}
