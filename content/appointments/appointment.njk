---
pagination:
  addAllPagesToCollections: true
  alias: appointment
  data: appointments
  size: 1
permalink: /{{ appointment.monthYear | slugifyMaltese }}/index.html
---
{% extends 'layouts/base.njk' %}

{% block head %}
	<title>{{ appointment.monthYear | prettifyMaltese | safe }} Â· Aphroconfuso</title>
	<meta content="{{ appointment.editorial | getDescription }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.imagesUrl }}{{ metadata.settings.socialImage }}">
{% endblock %}

{% block content %}
<article class="generic {{ appointment.monthYear | slugify }}">
	<header>
		<h4><a href="/appuntamenti">Appuntamenti</a></h4>
		<h1>{{ appointment.monthYear | prettifyMaltese | safe }}</h1>
		<h2></h2>
	</header>
	<div class="container-generic">
		<section id="grid-body">
			<div class="generic-body-text editorial">
				<div class="text-container">
					{{ appointment.editorial | prettifyMaltese | endDotify | safe }}
				</div>
			</div>
			{% set promoFrom = appointment.monthYear %}
			{% set promos = appointment.stories %}
			{% set showEpisodeTitle = true %}
			{% include '_promo_list.njk' %}
			<div class="generic-body-text more">
				{% if appointment.moreToCome %}
					{{ appointment.moreToCome | prettifyMaltese | safe }}
				{% else %}
					<p>{{ metadata.texts.newsletterMessage | safe }}</p>
				{% endif %}
			</div>
		</section>
		<section id="grid-max-panel-left-top">
			<!-- X -->
		</section>
	</div>
</article>
{% endblock %}
