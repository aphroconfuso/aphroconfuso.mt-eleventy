---
pagination:
  data: stories
  size: 250
  alias: story
permalink: /kotba/index.html
---
{% extends 'layouts/base.njk' %}

{% block head %}
	<title>{{ metadata.texts.booksTitle }} Â· Aphroconfuso</title>
	<meta content="{{ metadata.description }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.imagesUrl }}{{ metadata.settings.socialImage }}">
{% endblock %}

{% block content %}
	<article class="generic contents books">
		<header>
			<ul>
				<li class="header-label">&nbsp;</li>
			</ul>
			<h1>{{ metadata.texts.booksTitle }}</h1>
			<h2>&nbsp;</h2>
		</header>
		<section id="grid-body">
			{% set promosPublished = stories | selectattr("bookPublished") | sort(false, false, "dateTimePublication") %}
			{% set promosPrePublished = stories | selectattr("bookPreRelease") | sort(false, false, "dateTimePublication") %}
			{% set promos = promosPublished.concat(promosPrePublished) %}
			<div class="generic-body-text">
				{% set promoFrom = "Ktieb" %}
				{% set omitAside = true %}
				{% include "_promo_list.njk" %}
			</div>
		</section>
	</article>
	<script>
		reportingTitle = "{{ metadata.booksTitle }}";
	</script>
{% endblock %}
