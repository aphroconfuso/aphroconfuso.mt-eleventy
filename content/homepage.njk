---
permalink: /index.html
---
{% extends 'layouts/base.njk' %}
{% block head %}
	<title>Aphroconfuso</title>
	<meta content="{{ metadata.description }}" name="description">
	<meta property="og:image" content="{{ metadata.settings.socialImage }}">
{% endblock %}

{% block content %}
	<article class="home {{ homepage.monthYear | slugify }}">
		<div class="{{ homepage.layout | slugify }}">
			<a class="ga-editorial editorial" href="/{{ homepage.monthYear | fixMonthMaltese | slugifyMaltese }}/">
				<section class="generic-body-text">
					<div class="text-container">
						<p>
							<span class="editorial-month-year">{{ homepage.monthYear }}</span> {{ homepage.editorial | restrictHtml([]) | prettifyMaltese | safe }}
						</p>
					</div>
				</section>
			</a>
			<div class="ga-newsletter" id="newsletter-container">
				<section id="form" data-track-content data-content-name="Homepage" data-content-piece="formola">
					<iframe src="https://newsletter.aphroconfuso.mt/subscription/form#3d7fb6|#f9f9f3|0|442093344ewr" scrolling="no"></iframe>
				</section>
				{# <section id="pending" data-track-content data-content-name="Newsletter" data-content-piece="pendenti">
					<p>Bgħatnielek email biex tikkonferma <l-m>l-abbonament</l-m> tiegħek <l-m>fin-newsletter</l-m>. F’każ li ma ssibhiex, jekk jogħġbok fittixha <l-m>fl-ispam</l-m>.</p>
				</section>
				<section id="subscribed" data-track-content data-content-name="Newsletter" data-content-piece="dalwaqt">
					<p>Inti ġa abbonat fin-newsletter!</l-m></p>
				</section>
				<section id="message" data-track-content data-content-name="Newsletter" data-content-piece="Messaġġ">&nbsp;</section>
				<section id="placeholder">&nbsp;</section>
				<script>initialiseAfterNewsletter();</script> #}
			</div>
			{% for promo in homepage.promos %}
					<div class="ga{{ loop.index }} mga{{ promo.mobilePriority }}">
					<a class="{{ promo.monthYear | slugify }} {{ promo.promoType }}" href="/{{ promo.slug | slugifyMaltese }}/" onclick="_paq.push(['trackEvent', 'Promo', 'minn: Homepage', 'għal: {{ promo.title }}', {{ loop.index }}]);">
						<header>
							<h3>{{ promo.monthYear }}</h3>
							<h1>{{ promo.title | prettifyMaltese | safe }}</h1>
							<h2>
								{% if promo.translator %}
									{{ promo.author | prettifyMaltese }} <span class="translator">{{ promo.translator | prettifyMaltese }}</span>
								{% else %}
									{{ promo.author | prettifyMaltese }}
								{% endif %}
							</h2>
						</header>
						{% if promo.images %}
							<figure>
								<picture>
									<source media="(min-width: {{ metadata.settings.breakpoints.mobile }})" type="image/avif" srcset="
										{{ metadata.settings.imagesUrl }}{{ promo.images.twothirds_landscape_avif.hash }}{{ promo.images.twothirds_landscape_avif.ext }} 1x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.twothirds_landscape_avif_x2.hash }}{{ promo.images.twothirds_landscape_avif_x2.ext }} 2x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.twothirds_landscape_avif_x3.hash }}{{ promo.images.twothirds_landscape_avif_x3.ext }} 3x
									">
									<source media="(min-width: {{ metadata.settings.breakpoints.mobile }})" type="image/jpeg" srcset="
										{{ metadata.settings.imagesUrl }}{{ promo.images.twothirds_landscape_jpeg.hash }}{{ promo.images.twothirds_landscape_jpeg.ext }} 1x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.twothirds_landscape_jpeg_x2.hash }}{{ promo.images.twothirds_landscape_jpeg_x2.ext }} 2x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.twothirds_landscape_jpeg_x3.hash }}{{ promo.images.twothirds_landscape_jpeg_x3.ext }} 3x
									">
									<source media="(min-width: 1px)" type="image/avif" srcset="
										{{ metadata.settings.imagesUrl }}{{ promo.images.square_avif.hash }}{{ promo.images.square_avif.ext }} 1x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.square_avif_x2.hash }}{{ promo.images.square_avif_x2.ext }} 2x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.square_avif_x3.hash }}{{ promo.images.square_avif_x3.ext }} 3x
									">
									<source media="(min-width: 1px)" type="image/jpeg" srcset="
										{{ metadata.settings.imagesUrl }}{{ promo.images.square_jpeg.hash }}{{ promo.images.square_jpeg.ext }} 1x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.square_jpeg_x2.hash }}{{ promo.images.square_jpeg_x2.ext }} 2x,
										{{ metadata.settings.imagesUrl }}{{ promo.images.square_jpeg_x3.hash }}{{ promo.images.square_jpeg_x3.ext }} 3x
									">
									<img
										src="{{ metadata.settings.imagesUrl }}{{ promo.images.social.hash }}{{ promo.images.social.ext }}"
										alt="{{ promo.alternativeText }}"
									>
								</picture>
							</figure>
						{% endif %}
						<div class="{{ promo.cssClass }}">
							{% if promo.type === 'Poezija' %}
								<p>{{ promo.description | prettifyMaltese | versifyDescription | safe }}</p>
							{% else %}
								<p>{{ promo.description | prettifyMaltese | safe }}</p>
							{% endif %}
					</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</article>
{% endblock %}
